<div id="settings-form" class="row">

  <div class="col-md-12">
    <h2>Configuracion global</h2>
  </div>

  <div class="col-md-6">
    <div class="row">
      <div class="col-md-12">
        <div class="content-box-header">
          <div class="panel-title">Apariencia</div>
        </div>
        <div class="content-box-large box-with-header">

          <div class="form-group" title="Título de la pestaña de la página" rel="tooltip">
            <label for="look-feel.title" class="col-2 col-form-label">Título de la página</label>
            <div class="col-10">
              <input class="form-control" type="text" id="look-feel.title" setting-input value="<%= Setting['look-feel.title'] %>">
            </div>
          </div>

          <div class="form-group" title="Título que aparece al lado del logo de Movistar" rel="tooltip">
            <label for="look-feel.header" class="col-2 col-form-label">Título del banner</label>
            <div class="col-10">
              <input class="form-control" type="text" id="look-feel.header" setting-input value="<%= Setting['look-feel.header'] %>">
            </div>
          </div>

          <div class="form-group" title="Probando con valores númericos" rel="tooltip">
            <label for="random.number" class="col-2 col-form-label">Número de prueba</label>
            <div class="col-10">
              <input class="form-control" type="number" id="random.number" setting-input value="<%= Setting['random.number'] %>">
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="row">
      <div class="col-md-12">
        <div class="content-box-header">
          <div class="panel-title">Otra categoria</div>
        </div>
        <div class="content-box-large box-with-header">
          <div class="form-group" title="Título de la pestaña de la página" rel="tooltip">
            <label for="example-time-input" class="col-2 col-form-label">Título de la página</label>
            <div class="col-10">
              <input class="form-control" type="text" id="example-time-input">
            </div>
          </div>
          <div class="form-group" title="Título que aparece al lado del logo de Movistar" rel="tooltip">
            <label for="example-color-input" class="col-2 col-form-label">Título del banner</label>
            <div class="col-10">
              <input class="form-control" type="text" id="example-color-input">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>



  <div class="col-md-12">
    <button class="btn btn-primary" id="save-changes">Guardar cambios</button> <span style="display: none;" class="glyphicon glyphicon-refresh spinning"></span>
  </div>

</div>
